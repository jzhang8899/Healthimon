<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/boxing_ring">
    
     <TextView
          android:id="@+id/textView1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:text="User Name To Fight:"
          android:textAppearance="?android:attr/textAppearanceMedium" />

     <EditText
         android:id="@+id/fightName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/textView1"
         android:ems="10" >

        
     </EditText>

     <Button
         android:id="@+id/boss5"
         android:layout_width="200dp"
         android:layout_height="64dp"
         android:layout_marginBottom="5dp"
         android:layout_marginTop="5dp"
         android:layout_below="@+id/fightName"
         android:layout_centerHorizontal="true" />

     <Button
         android:id="@+id/boss4"
         android:layout_width="200dp"
         android:layout_height="64dp"
         android:layout_marginBottom="5dp"
         android:layout_below="@+id/boss5"
         android:layout_centerHorizontal="true"/>

     <Button
         android:id="@+id/boss3"
         android:layout_width="200dp"
         android:layout_height="64dp"
         android:layout_marginBottom="5dp"
         android:layout_below="@+id/boss4"
         android:layout_centerHorizontal="true"/>

     <Button
         android:id="@+id/boss2"
         android:layout_width="200dp"
         android:layout_height="64dp"
         android:layout_marginBottom="5dp"
         android:layout_below="@+id/boss3"
         android:layout_centerHorizontal="true"/>

     <Button
         android:id="@+id/boss1"
         android:layout_width="200dp"
         android:layout_height="64dp"
         android:layout_marginBottom="5dp"
         android:layout_below="@+id/boss2"
         android:layout_centerHorizontal="true"/>

     <Button
         android:id="@+id/fightfriends"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/fightName"
         android:layout_alignBottom="@+id/fightName"
         android:layout_toRightOf="@+id/fightName"
         android:text="Fight" />

     <Button
         android:id="@+id/fightRandom"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/fightfriends"
         android:layout_alignBottom="@+id/fightfriends"
         android:layout_alignParentRight="true"
         android:text="Random" />

     <View
         android:id="@+id/view01"
         android:layout_width="fill_parent"
         android:layout_height="2dp"
         android:layout_alignBottom="@+id/fightName"
         android:layout_alignParentLeft="true"
         android:background="#313437" />

</RelativeLayout>
