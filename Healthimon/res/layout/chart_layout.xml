<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/boxing_ring" >
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1550dp">
        
        <net.kenyang.piechart.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_marginTop="18dp"  >
            </net.kenyang.piechart.PieChart>
            
      <LinearLayout
          android:id="@+id/relative"
          android:orientation="vertical"
           android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="430dp"  >

          <TextView
              android:id="@+id/textView3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#403bff"
              android:gravity="center_horizontal"
              android:text="Weight Chart"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#FFFFFF" />
          
      </LinearLayout>

      <ImageView
          android:id="@+id/imageView1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/relative"
          android:layout_marginTop="56dp"
          android:scaleType="fitXY"
          android:src="@drawable/workout_chart_2" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/relative"
          android:layout_marginTop="15dp"
          android:gravity="center_horizontal"
          android:text="Exercise Chart"
          android:background="#403bff"
          android:textColor="#FFFFFF"
          android:textAppearance="?android:attr/textAppearanceMedium" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_gravity="center_horizontal"
          android:gravity="center_horizontal"
          android:text="Attributes Chart"
          android:background="#403bff"
          android:textColor="#FFFFFF"
          android:textAppearance="?android:attr/textAppearanceMedium" />

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/pieChart"
          android:layout_marginRight="14dp"
          android:src="@drawable/chart_legend" />
        
    </RelativeLayout>

</ScrollView>
